// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator dts {
  provider = "node ./prisma/generators/dts/index.cjs"
  output   = "../types"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?     // 可选，OAuth 用户无密码
  name          String?
  avatar        String?
  role          Role        @default(USER)
  status        UserStatus  @default(ACTIVE)
  country       String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime  @updatedAt
  
  // OAuth 关联
  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  messageRecipients MessageRecipient[]
  messagesCreated   Message[] @relation("CreatedMessages")
  messagesRevoked   Message[] @relation("RevokedMessages")
  preApplications          PreApplication[]
  preApplicationsReviewed PreApplication[] @relation("ReviewedPreApplications")
  preApplicationVersionsReviewed PreApplicationVersion[] @relation("ReviewedVersions")
  inviteCodesCreated     InviteCode[] @relation("InviteCodesCreated")
  inviteCodesAssigned    InviteCode[] @relation("InviteCodesAssigned")
  inviteCodesUsed        InviteCode[] @relation("InviteCodesUsed")
  inviteCodesIssued      InviteCode[] @relation("InviteCodesIssued")
  queryTokensCreated     InviteCodeQueryToken[] @relation("QueryTokensCreated")
  auditLogs              AuditLog[] @relation("AuditActor")
  tickets                Ticket[] @relation("UserTickets")
  ticketMessages         TicketMessage[] @relation("TicketMessageAuthor")
  chatMessages           ChatMessage[] @relation("ChatMessageSender")
  privateChatsAsUser     PrivateChat[] @relation("PrivateChatUser")
  privateChatsAsAdmin    PrivateChat[] @relation("PrivateChatAdmin")
  privateChatMessages    PrivateChatMessage[] @relation("PrivateChatMessageSender")
  apiTokens              ApiToken[]

  // 密码重置
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  // 账户二次激活
  reactivationToken       String?   @unique
  reactivationTokenExpiry DateTime?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  trustLevel        Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id          String     @id @default(cuid())
  title       String
  content     String?
  published   Boolean    @default(false)
  status      PostStatus @default(DRAFT)
  views       Int        @default(0)
  authorId    String
  author      User       @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([authorId])
  @@index([status])
}

model Message {
  id           String             @id @default(cuid())
  title        String
  content      String
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  createdById  String
  revokedAt    DateTime?
  revokedById  String?
  createdBy    User               @relation("CreatedMessages", fields: [createdById], references: [id], onDelete: Cascade)
  revokedBy    User?              @relation("RevokedMessages", fields: [revokedById], references: [id])
  recipients   MessageRecipient[]

  @@index([createdById])
  @@index([revokedAt])
}

model MessageRecipient {
  messageId String
  userId    String
  readAt    DateTime?
  deletedAt DateTime?
  createdAt DateTime @default(now())
  message   Message  @relation(fields: [messageId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([messageId, userId])
  @@index([userId, readAt])
  @@index([userId, deletedAt])
}

model PreApplication {
  id            String                 @id @default(cuid())
  userId        String?                // 可选，访客申请时为空
  qqNumber      String?                // 访客申请时使用 QQ 号
  essay         String
  source        PreApplicationSource?
  sourceDetail  String?
  registerEmail String
  queryToken    String?                @unique
  group         String                 // 动态 QQ 群 ID
  status        PreApplicationStatus   @default(PENDING)
  guidance      String?
  reviewedAt    DateTime?
  reviewedById  String?
  resubmitCount Int                    @default(0)  // 重新提交次数（驳回后）
  version       Int                    @default(1)  // 乐观锁版本号
  inviteCodeId  String?                @unique
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
  holdUntil     DateTime?              // ON_HOLD 状态的截止时间

  user       User?                     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewedBy User?                     @relation("ReviewedPreApplications", fields: [reviewedById], references: [id])
  inviteCode InviteCode?               @relation("PreApplicationInviteCode", fields: [inviteCodeId], references: [id])
  versions   PreApplicationVersion[]   // 版本历史
  tickets    Ticket[]                  // 工单

  @@index([status, createdAt])
  @@index([userId, createdAt])
  @@index([registerEmail])
  @@index([qqNumber])
}

// 预申请版本历史表
model PreApplicationVersion {
  id                String                 @id @default(cuid())
  preApplicationId  String
  version           Int
  essay             String
  source            PreApplicationSource?
  sourceDetail      String?
  registerEmail     String
  group             String                 // 动态 QQ 群 ID
  status            PreApplicationStatus   // 当前状态（会在审核时更新）
  guidance          String?                // 审核意见
  reviewedAt        DateTime?              // 审核时间
  reviewedById      String?                // 审核人 ID
  createdAt         DateTime               @default(now())

  preApplication    PreApplication @relation(fields: [preApplicationId], references: [id], onDelete: Cascade)
  reviewedBy        User?          @relation("ReviewedVersions", fields: [reviewedById], references: [id])

  @@unique([preApplicationId, version])
  @@index([preApplicationId])
}

model InviteCode {
  id          String    @id @default(cuid())
  code        String    @unique
  expiresAt   DateTime?
  assignedAt  DateTime?
  assignedById String?
  usedAt      DateTime?
  usedById    String?
  createdById String?
  issuedToUserId String?
  issuedToEmail  String?
  issuedAt       DateTime?
  queryTokenId   String?
  deletedAt   DateTime?
  // 有效性检测结果
  checkValid     Boolean?
  checkMessage   String?
  checkedAt      DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  assignedBy User? @relation("InviteCodesAssigned", fields: [assignedById], references: [id])
  usedBy     User? @relation("InviteCodesUsed", fields: [usedById], references: [id])
  createdBy  User? @relation("InviteCodesCreated", fields: [createdById], references: [id])
  issuedToUser User? @relation("InviteCodesIssued", fields: [issuedToUserId], references: [id])
  preApplication PreApplication? @relation("PreApplicationInviteCode")
  queryToken InviteCodeQueryToken? @relation(fields: [queryTokenId], references: [id])

  @@index([expiresAt])
  @@index([usedAt])
  @@index([issuedToUserId])
  @@index([issuedToEmail])
  @@index([queryTokenId])
  @@index([deletedAt])
  @@index([checkValid])
}

model InviteCodeQueryToken {
  id          String    @id @default(cuid())
  token       String    @unique
  expiresAt   DateTime?
  queriedAt   DateTime?
  createdById String
  createdAt   DateTime  @default(now())

  createdBy   User         @relation("QueryTokensCreated", fields: [createdById], references: [id])
  inviteCodes InviteCode[]

  @@index([token])
  @@index([createdById])
}

model AuditLog {
  id         String   @id @default(cuid())
  entityType String
  entityId   String?
  action     String
  actorId    String?
  actorName  String?
  actorEmail String?
  actorRole  Role?
  ip         String?
  userAgent  String?
  before     Json?
  after      Json?
  metadata   Json?
  createdAt  DateTime @default(now())

  actor User? @relation("AuditActor", fields: [actorId], references: [id])

  @@index([entityType, entityId])
  @@index([actorId, createdAt])
  @@index([createdAt])
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  BANNED
  DELETED
}

enum PostStatus {
  DRAFT
  PUBLISHED
  PENDING
  REJECTED
}

enum PreApplicationStatus {
  PENDING
  APPROVED
  REJECTED
  DISPUTED
  ARCHIVED
  PENDING_REVIEW
  ON_HOLD
}

enum PreApplicationSource {
  TIEBA
  BILIBILI
  DOUYIN
  XIAOHONGSHU
  OTHER
}

model SiteSettings {
  id                String   @id @default("global")
  siteName          String
  siteDescription   String
  contactEmail      String
  userRegistration  Boolean  @default(true)
  oauthLogin        Boolean  @default(true)
  emailNotifications Boolean @default(true)
  postModeration    Boolean  @default(false)
  maintenanceMode   Boolean  @default(false)
  adminApplicationEnabled Boolean @default(true)
  auditLogEnabled   Boolean  @default(false)
  preApplicationEssayHint String @default("建议 100 字左右,避免夸赞社区与版主,只说明你的目的与需求。")
  allowedEmailDomains     Json   @default("[]")
  reviewTemplatesApprove  Json   @default("[]")
  reviewTemplatesApproveNoCode Json @default("[]") // 审核通过但无邀请码时的模板
  reviewTemplatesReject   Json   @default("[]")
  reviewTemplatesDispute  Json   @default("[]")
  // QQ 群配置 [{id, name, number, url, enabled}]
  qqGroups                Json   @default("[]")
  // 邀请码链接前缀，如 "https://example.com/invites/"
  inviteCodeUrlPrefix     String @default("")
  // 邮件配置
  emailProvider           String   @default("env")  // "env" | "api" | "smtp"
  selectedEmailApiConfigId String?
  smtpHost                String?
  smtpPort                Int?
  smtpUser                String?
  smtpPass                String?
  smtpSecure              Boolean  @default(false)
  // 驳回后最大重新提交次数（0 = 无限制）
  maxResubmitCount        Int      @default(2)
  // 邀请码有效期检测 API 配置
  inviteCodeCheckApiUrl   String?
  inviteCodeCheckApiKey   String?  // API Key 值
  analyticsEnabled        Boolean  @default(true)
  linuxdoAutoAdmin        Boolean  @default(false)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  selectedEmailApiConfig  EmailApiConfig? @relation(fields: [selectedEmailApiConfigId], references: [id], onDelete: SetNull)
}

// 邮件 API 配置（支持多个）
model EmailApiConfig {
  id        String   @id @default(cuid())
  name      String
  host      String
  port      Int      @default(587)
  user      String
  pass      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  siteSettings SiteSettings[]

  @@index([name])
}

model EmailLog {
  id          String          @id @default(cuid())
  to          String
  subject     String
  status      EmailLogStatus  @default(PENDING)
  provider    String?
  errorMessage String?
  metadata    Json?
  createdAt   DateTime        @default(now())

  @@index([to])
  @@index([status])
  @@index([createdAt])
}

enum EmailLogStatus {
  PENDING
  SUCCESS
  FAILED
}

// 工单状态
enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

// 工单
model Ticket {
  id                 String        @id @default(cuid())
  preApplicationId   String
  userId             String
  subject            String
  status             TicketStatus  @default(OPEN)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  resolvedAt         DateTime?

  preApplication     PreApplication @relation(fields: [preApplicationId], references: [id], onDelete: Cascade)
  user               User           @relation("UserTickets", fields: [userId], references: [id], onDelete: Cascade)
  messages           TicketMessage[]

  @@index([status])
  @@index([userId])
  @@index([preApplicationId])
}

// 工单消息
model TicketMessage {
  id         String   @id @default(cuid())
  ticketId   String
  authorId   String
  content    String
  createdAt  DateTime @default(now())

  ticket     Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  author     User     @relation("TicketMessageAuthor", fields: [authorId], references: [id], onDelete: Cascade)

  @@index([ticketId, createdAt])
}

// 聊天消息
model ChatMessage {
  id         String    @id @default(cuid())
  content    String
  senderId   String
  replyToId  String?
  createdAt  DateTime  @default(now())
  deletedAt  DateTime?

  sender     User         @relation("ChatMessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  replyTo    ChatMessage? @relation("ChatMessageReplies", fields: [replyToId], references: [id], onDelete: SetNull)
  replies    ChatMessage[] @relation("ChatMessageReplies")

  @@index([createdAt])
  @@index([senderId])
  @@index([replyToId])
}

// 私信会话（用户与管理员之间）
model PrivateChat {
  id          String    @id @default(cuid())
  userId      String
  adminId     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation("PrivateChatUser", fields: [userId], references: [id], onDelete: Cascade)
  admin       User      @relation("PrivateChatAdmin", fields: [adminId], references: [id], onDelete: Cascade)
  messages    PrivateChatMessage[]

  @@unique([userId, adminId])
  @@index([userId])
  @@index([adminId])
  @@index([updatedAt])
}

model PrivateChatMessage {
  id         String    @id @default(cuid())
  chatId     String
  senderId   String
  content    String
  createdAt  DateTime  @default(now())
  readAt     DateTime?

  chat       PrivateChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  sender     User        @relation("PrivateChatMessageSender", fields: [senderId], references: [id], onDelete: Cascade)

  @@index([chatId, createdAt])
  @@index([senderId])
}

model ApiToken {
  id         String    @id @default(cuid())
  name       String
  tokenHash  String    @unique
  prefix     String
  userId     String
  expiresAt  DateTime?
  lastUsedAt DateTime?
  createdAt  DateTime  @default(now())
  revokedAt  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@index([prefix])
}
